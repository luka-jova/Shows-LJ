<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
					android:text="@string/text_seasons"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="@id/numberPickerSeason"
					app:layout_constraintRight_toRightOf="@id/numberPickerSeason"
					android:textColor="@color/colorAccent"
					android:textSize="16sp"
					android:id="@+id/textViewSeason"/>
	<TextView
					android:text="@string/text_episode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="@id/numberPickerEpisode"
					app:layout_constraintRight_toRightOf="@id/numberPickerEpisode"
					android:textColor="@color/colorAccent"
					android:textSize="16sp"
					android:id="@+id/textViewEpisode"/>

	<NumberPicker
					android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewSeason"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toLeftOf="@id/numberPickerEpisode"
					android:id="@+id/numberPickerSeason">
	</NumberPicker>

	<NumberPicker
					android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewEpisode"
					app:layout_constraintLeft_toRightOf="@id/numberPickerSeason"
					app:layout_constraintRight_toRightOf="parent"
					android:id="@+id/numberPickerEpisode">

	</NumberPicker>

</androidx.constraintlayout.widget.ConstraintLayout>
