<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

	<TextView
					android:text="@string/text_seasons"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toLeftOf="@id/textViewEpisode"
					android:textColor="@color/colorAccent"
					android:textSize="16sp"
					android:id="@+id/textViewSeason"/>
	<TextView
					android:text="@string/text_episode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toRightOf="@id/textViewSeason"
					app:layout_constraintRight_toRightOf="parent"
					android:textColor="@color/colorAccent"
					android:textSize="16sp"
					android:id="@+id/textViewEpisode"/>

	<NumberPicker
					android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="30dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewSeason"
					app:layout_constraintLeft_toLeftOf="@id/textViewSeason"
					app:layout_constraintRight_toRightOf="@id/textViewSeason"
					android:id="@+id/numberPickerSeason">
	</NumberPicker>

	<NumberPicker
					android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:layout_marginBottom="30dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewEpisode"
					app:layout_constraintLeft_toLeftOf="@id/textViewEpisode"
					app:layout_constraintRight_toRightOf="@id/textViewEpisode"
					android:id="@+id/numberPickerEpisode">

	</NumberPicker>
	<com.google.android.material.textfield.TextInputLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/numberPickerEpisode"
					android:layout_marginBottom="50dp"
					android:layout_marginTop="50dp"
					app:layout_constraintBottom_toBottomOf="parent"
					android:id="@+id/textInputEpisodeDescription">


		<EditText
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:inputType="text"
						android:textSize="16sp"
						android:hint="Napisi nesto"
						android:id="@+id/editTextNapisiNesto"/>
	</com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
