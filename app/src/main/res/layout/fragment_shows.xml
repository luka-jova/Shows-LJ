<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<TextView
					android:text="@string/text_shows"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintBottom_toTopOf="@id/recyclerViewShows"
					android:paddingLeft="16dp"
					android:paddingRight="16dp"
					android:paddingTop="24dp"
					android:paddingBottom="24dp"
					android:textSize="28sp"
					android:textColor="@color/colorTextStrong"
					android:id="@+id/textViewShows"/>

	<androidx.recyclerview.widget.RecyclerView
					tools:visibility="invisible"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewShows"
					android:id="@+id/recyclerViewShows"
					tools:listitem="@layout/layout_show_card"/>
	<ProgressBar
					style="?android:attr/progressBarStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:layout_marginBottom="16dp"
					android:id="@+id/progressBarDownloading"/>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
					android:id="@+id/fabToggleLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:src="@drawable/ic_add_white"/>
	<ImageButton android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             app:layout_constraintTop_toTopOf="@id/textViewShows"
	             app:layout_constraintBottom_toBottomOf="@id/textViewShows"
	             app:layout_constraintRight_toRightOf="parent"
	             android:layout_marginRight="16dp"
	             android:src="@drawable/circle_placeholder"
	             android:background="@color/colorTransparent"
	             android:padding="8dp"
	             android:id="@+id/buttonLogout"/>

	<ScrollView android:layout_width="match_parent"
	            android:layout_height="0dp"
	            app:layout_constraintTop_toBottomOf="@id/textViewShows"
	            app:layout_constraintLeft_toLeftOf="parent"
	            app:layout_constraintRight_toRightOf="parent"
	            app:layout_constraintBottom_toBottomOf="parent"
	            android:fillViewport="true"
	            android:id="@+id/defaultLayout">
		<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="50dp">
			<ImageView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:srcCompat="@drawable/img_placeholder_episodes"/>
			<TextView
							android:text="Someone has fallen asleep.\nWaking him up!"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:textAlignment="center"
							android:layout_marginTop="10dp"/>
		</LinearLayout>
	</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>