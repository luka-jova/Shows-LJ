<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp">

	<ImageView
					android:layout_width="64dp"
					android:layout_height="90dp"
					android:background="@color/colorBackgroundShow"
					android:id="@+id/imageViewShow"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					tools:src="@tools:sample/avatars[1]"
					android:scaleType="centerCrop"/>
	<TextView
					android:text="Ime serije"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toRightOf="@id/imageViewShow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="20sp"
					android:textColor="@color/colorTextNormal"
					android:layout_marginLeft="16dp"
					android:id="@+id/textViewShowName"/>
	<ImageView android:layout_width="wrap_content"
	           android:layout_height="0dp"
	           app:layout_constraintTop_toTopOf="@id/textViewLikeNumber"
	           app:layout_constraintBottom_toBottomOf="@id/textViewLikeNumber"
	           android:src="@drawable/ic_thumb_up_black_24dp"
	           android:tintMode="src_in"
	           android:tint="@color/colorTextLight"
	           app:layout_constraintTop_toBottomOf="@id/textViewShowName"
	           app:layout_constraintLeft_toRightOf="@id/imageViewShow"
	           android:layout_marginLeft="16dp"
	           android:id="@+id/imageViewLThumpUp"/>
	<TextView
					android:text="123"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="14sp"
					android:textColor="@color/colorTextLight"
					app:layout_constraintLeft_toRightOf="@id/imageViewLThumpUp"
					app:layout_constraintTop_toBottomOf="@id/textViewShowName"
					android:id="@+id/textViewLikeNumber"
					android:layout_marginTop="8dp"
					android:layout_marginLeft="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
