<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
        android:layout_height="match_parent">
	<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toTopOf="@id/recyclerViewShows"
					android:id="@+id/frameLayoutShows">

		<TextView
						android:text="@string/text_shows"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginTop="20dp"
						android:layout_marginBottom="20dp"
						android:textSize="28sp"
						android:textColor="@color/colorTextStrong"
						android:id="@+id/textViewShows"/>
	</FrameLayout>

	<androidx.recyclerview.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="500dp"
					android:paddingLeft="8dp"
					android:paddingTop="8dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/frameLayoutShows"
					android:id="@+id/recyclerViewShows"
					tools:listitem="@layout/layout_show"/>

</androidx.constraintlayout.widget.ConstraintLayout>