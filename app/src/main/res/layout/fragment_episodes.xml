<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:clickable="true"
				android:focusable="true"
				android:background="@color/colorBackground">

	<androidx.appcompat.widget.Toolbar
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:background="@color/colorPrimary"
					android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
					android:id="@+id/toolbarEpisodes"/>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
					android:id="@+id/fab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					app:layout_constraintEnd_toEndOf="@+id/toolbarEpisodes"
					app:layout_constraintBottom_toBottomOf="parent"
					android:src="@drawable/ic_add_white"/>

	<TextView android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="0"
	          android:textSize="20sp"
	          android:textColor="@color/colorTextStrong"
	          app:layout_constraintRight_toRightOf="parent"
	          app:layout_constraintLeft_toLeftOf="parent"
	          app:layout_constraintTop_toBottomOf="@id/toolbarEpisodes"
	          android:id="@+id/textViewLikesCount"/>

	<ImageButton
					android:id="@+id/buttonDislike"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintRight_toLeftOf="@id/textViewLikesCount"
					app:layout_constraintTop_toTopOf="@id/textViewLikesCount"
					app:layout_constraintBottom_toBottomOf="@id/textViewLikesCount"
					android:layout_marginRight="8dp"
					android:background="@drawable/ic_circle"
					android:padding="4dp"
					android:src="@drawable/ic_thumbs_down"/>
	<ImageButton
					android:id="@+id/buttonLike"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintLeft_toRightOf="@id/textViewLikesCount"
					app:layout_constraintTop_toTopOf="@id/textViewLikesCount"
					app:layout_constraintBottom_toBottomOf="@id/textViewLikesCount"
					android:layout_marginLeft="8dp"
					android:background="@drawable/ic_circle"
					android:padding="4dp"
					android:src="@drawable/ic_thumbs_up"/>
	<androidx.recyclerview.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewLikesCount"
					android:layout_marginTop="16dp"
					tools:listitem="@layout/layout_episode"
					android:layout_marginBottom="24dp"
					android:id="@+id/recyclerViewEpisodes"/>
	<ProgressBar
					style="?android:attr/progressBarStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:layout_marginBottom="16dp"
					android:id="@+id/progressBarDownloading"/>

</androidx.constraintlayout.widget.ConstraintLayout>