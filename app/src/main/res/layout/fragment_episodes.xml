<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:clickable="true"
				android:focusable="true"
				android:background="@color/colorBackground">

	<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/textViewEpisodes"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:layout_marginTop="50dp"
					android:id="@+id/defaultLayout">
		<ImageView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/img_placeholder_episodes"/>
		<TextView
						android:text="Someone has fallen asleep.\nWake him up!"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						android:layout_marginTop="10dp"/>
		<TextView
						android:text="Add some episodes."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						android:textColor="@color/colorAccent"/>
	</LinearLayout>
	<com.google.android.material.floatingactionbutton.FloatingActionButton
					android:id="@+id/fab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="16dp"
					app:layout_constraintEnd_toEndOf="@+id/toolbarEpisodes"
					app:layout_constraintBottom_toBottomOf="parent"
					android:src="@drawable/ic_add_white"/>

	<androidx.appcompat.widget.Toolbar
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:background="@color/colorPrimary"
					android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
					android:id="@+id/toolbarEpisodes"/>
	<TextView
					android:text="Description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/toolbarEpisodes"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:padding="24dp"
					android:textSize="16sp"
					android:textColor="@color/colorTextNormal"
					android:id="@+id/textViewDescription"/>
	<TextView
					android:text="@string/text_episodes"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/textViewDescription"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:padding="24dp"
					android:textSize="20sp"
					android:textColor="@color/colorTextStrong"
					android:id="@+id/textViewEpisodes"/>

	<androidx.recyclerview.widget.RecyclerView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintTop_toBottomOf="@id/textViewEpisodes"
					tools:listitem="@layout/layout_episode"
					android:layout_marginBottom="24dp"
					android:id="@+id/recyclerViewEpisodes"/>

</androidx.constraintlayout.widget.ConstraintLayout>