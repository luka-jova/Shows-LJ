<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
	<TextView
					tools:text="Description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="24dp"
					android:textSize="16sp"
					android:textColor="@color/colorTextNormal"
					android:id="@+id/textViewDescription"/>

	<TextView
					android:text="@string/text_episodes"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="24dp"
					android:textSize="20sp"
					android:textColor="@color/colorTextStrong"
					android:id="@+id/textViewEpisodes"/>
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="vertical"
	              android:id="@+id/defaultLayout">
		<ImageView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/img_placeholder_episodes"/>
		<TextView
						android:text="Someone has fallen asleep.\nWake him up!"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						android:layout_marginTop="10dp"/>
		<TextView
						android:text="Add some episodes."
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textAlignment="center"
						android:textColor="@color/colorAccent"/>
	</LinearLayout>
</LinearLayout>
